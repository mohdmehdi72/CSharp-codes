static void Main(string[]args)
{
            int[] arr = { 40, 53, 91, 54, 32, 90 };
            int maxvalue = 0;
            for (int i = 0; i < arr.Length; i++)
            {
                Console.WriteLine("arrary value " + arr[i]);
                if (maxvalue < arr[i])
                {
                    maxvalue = arr[i];
                }
            }
            Console.WriteLine(Environment.NewLine + "the largest value of array is " + maxvalue);

}
